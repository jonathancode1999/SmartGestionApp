<Window x:Class="SmartGestionApp.Views.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restablecer contraseña"
        Height="280" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        >

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Nueva contraseña:"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"
                   FontSize="14"/>
        <PasswordBox x:Name="NewPasswordBox"
                     Grid.Row="1"
                     Margin="0,5,0,15"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     BorderBrush="#BDC3C7"
                     BorderThickness="1"/>

        <TextBlock Text="Repetir contraseña:"
                   Grid.Row="2"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"
                   FontSize="14"/>
        <PasswordBox x:Name="ConfirmPasswordBox"
                     Grid.Row="3"
                     Margin="0,5,0,15"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     BorderBrush="#BDC3C7"
                     BorderThickness="1"/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancelar"
                    Width="75"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"
                    Background="Transparent"
                    Foreground="#2980B9"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"/>
            <Button Content="Aceptar"
                    Width="75"
                    Click="Accept_Click"
                    Background="#2980B9"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="30"
                    Cursor="Hand"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
