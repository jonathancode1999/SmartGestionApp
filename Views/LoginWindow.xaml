<Window x:Class="SmartGestionApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartGestión - Login"
        Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Imagen lateral -->
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/Images/login-image-bn.png"
                       Width="200"
                       Height="200"
                       Stretch="Uniform"
                       Margin="20"/>

                <TextBlock Text="SmartGestión"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Formulario login -->
        <StackPanel Grid.Column="1" Margin="40" VerticalAlignment="Center">
            <TextBlock Text="Bienvenido"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0 0 0 25" />

            <TextBlock Text="Email"
                       FontWeight="SemiBold"
                       Foreground="#34495E"
                       Margin="0 0 0 5"/>
            <TextBox x:Name="EmailTextBox"
                     Height="30"
                     FontSize="14"
                     Padding="5"
                     BorderBrush="#BDC3C7"
                     BorderThickness="1"
                     KeyDown="LoginField_KeyDown"/>

            <TextBlock Text="Contraseña"
                       FontWeight="SemiBold"
                       Foreground="#34495E"
                       Margin="15 15 0 5"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="30"
                         FontSize="14"
                         Padding="5"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         KeyDown="LoginField_KeyDown"/>

            <CheckBox x:Name="RememberMeCheckBox"
                      Content="Recordarme"
                      Margin="0 15 0 15"
                      Foreground="#2C3E50"
                      FontWeight="Normal" />

            <Button Content="Iniciar sesión"
                    Click="LoginButton_Click"
                    Background="#2980B9"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Cursor="Hand"
                    BorderThickness="0"
                    Margin="0 0 0 10"/>

            <Button Content="Olvidé contraseña"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    Foreground="#2980B9"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Click="ForgotPasswordButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
